<div class="page-header">
    <div class="icon">
      <span class="ico-arrow-right"></span>
    </div>
    <h1>A rendre <small>Liste des demandes de documents rendues</small></h1>
</div>

<div class = "row-fluid">
  <div class = "span12">
    <%= render 'layouts/flash_messages' %>
    <div id = "custom_messages">
    </div>
    <% if !@error_messages.blank? %>  
      <div class = "alert alert-error">         
        <ul>
        <% @error_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <% if !@alert_messages.blank? %>  
      <div class = "alert alert-info">         
        <% @alert_messages.each do |msg| %>
          <%= msg %>
        <% end %>
      </div>
    <% end %>
    <% if @success %> 
      <div class = "alert alert-success">         
        <% @success_messages.each do |msg| %>
          <%= msg %>
        <% end %>
      </div>
    <% end %>
     
    <div class = "block">
      <div class = "head blue">
        <div class = "icon">
          <i class = "ico-layout-9"></i>
        </div>
        <h2>Liste des demandes de documents rendues de <%= @user.full_name %></h2>
        <ul class = "buttons">
          <li>
            <a href = "javascript:history.go(-1);" alt = "Aller à la page précédente">
              <div class = "icon">
                <span class = "ico-arrow-left">
                               
                </span>
              </div>
            </a>
          </li>
        </ul>
      </div>
      <div class = "data-fluid">
        <table class = "table" cellpading = "0" cellspacing = "0" width = "100%">
          <thead>
            <tr>
              <th width = "70%">
                Date des demandes
              </th>
              <th width = "15%">
                Nombre de documents
              </th>
              <th width = "15%">
                Statut de la demande
              </th>
            </tr>
          </thead>
          <tbody>
            <% if @demands.blank? %>
              <tr>
                <td colspan = "3"></td>
              </tr>
            <% else %>
              <% @demands.each do |demand| %>
                <tr>
                  <td>
                    <a href = "<%= personnal_demand_documents_list_path(demand.id) %>">
                      Demande du <%= demand.created_at.strftime("%d-%m-%y") %> à <%= demand.created_at.strftime("%Hh %Mmn") %>
                    </a>                                                         
                  </td>
                  <td><%= demand.books.count %></td>
                  <td>
                    <div id = "global_demand_status_<%= demand.id %>">
                      <%= display_demand_status(demand) %>   
                    </div>            
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div> 
</div>
