<div class="page-header">
    <div class="icon">
      <span class="ico-arrow-right"></span>
    </div>
    <h1>Documents rendus <small>Liste des demandes de documents que vous avez rendus au centre de documentation</small></h1>
</div>

<div class = "row-fluid">
  <div class = "span12">
    <%= render 'layouts/flash_messages' %>
    <div id = "custom_messages">
    </div>
    <% if !@error_messages.blank? %>  
      <div class = "alert alert-error">         
        <ul>
        <% @error_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <% if !@alert_messages.blank? %>  
      <div class = "alert alert-info">         
        <% @alert_messages.each do |msg| %>
          <%= msg %>
        <% end %>
      </div>
    <% end %>
    <% if @success %> 
      <div class = "alert alert-success">         
        <% @success_messages.each do |msg| %>
          <%= msg %>
        <% end %>
      </div>
    <% end %>
     
    <div class = "block">
      <div class = "head green">
        <div class = "icon">
          <i class = "ico-layout-9"></i>
        </div>
        <h2>Liste des demandes de documents rendus</h2>
      </div>
      <div class = "data-fluid">
        <table class = "table" cellpading = "0" cellspacing = "0" width = "100%">
          <thead>
            <tr>
              <th width = "56%">
                Date des demandes
              </th>
              <th width = "30%">
                Nombre de documents
              </th>
              <th width = "14%">
                Statut de la demande
              </th>
            </tr>
          </thead>
          <tbody>
            <% if @demands.blank? %>
              <tr>
                <td colspan = "4"></td>
              </tr>
            <% else %>
              <% @demands.each do |demand| %>
                <tr>
                  <td>
                    <a href = "<%= personnal_demand_documents_list_path(demand.id) %>">
                      Demande du <%= demand.created_at.strftime("%d-%m-%y") %> Ã  <%= demand.created_at.strftime("%Hh %Mmn") %>
                    </a>                                                                                                                  
                  </td>
                  <td><%= demand.books.count %></td>
                  <td>
                    <div id = "global_demand_status_<%= demand.id %>">
                      <%= display_demand_status(demand) %>   
                    </div>            
                  </td>
                </tr>
              <% end %>             
            <% end %>
          </tbody>
        </table>
        <% unless @demands.blank? %>
		      <div id = "pagination">
            <%= paginate @demands %>
          </div>
        <% end %> 
      </div>
    </div>
  </div> 
</div>
